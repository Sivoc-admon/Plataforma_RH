/* General page styling */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
}

/* Container styling */
.inside-content-css {
    padding: 2rem;
    margin: auto;
    max-width: 1200px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Title styling */
h1 {
    font-size: 2rem;
    text-align: center;
    color: #333333;
    margin-bottom: 1rem;
}

/* Buttons styling */
.default-button-css {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: #007bff;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.default-button-css:hover {
    background-color: #0056b3;
}

.functionality-button-css {
    margin: 0.5rem;
    font-size: 0.9rem;
}

.default-icon-button-css {
    margin-right: 0.5rem;
    font-size: 1.2rem;
}

/* Input styling */
.input {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 1rem;
    box-sizing: border-box;
}

/* Table styling */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
    background-color: #ffffff;
}

.table thead th {
    background-color: #007bff;
    color: white;
    text-align: center;
    padding: 0.75rem;
    font-size: 1rem;
}

.table tbody td {
    text-align: center;
    padding: 0.75rem;
    border-bottom: 1px solid #dddddd;
    font-size: 0.9rem;
}

.table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

.table tbody tr:hover {
    background-color: #f1f1f1;
    cursor: pointer;
}

/* Pagination buttons */
.pagination .default-button-css {
    margin: 0.5rem;
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
    background-color: #007bff;
    color: #ffffff;
    border: none;
    border-radius: 5px;
}

.pagination .default-button-css:hover {
    background-color: #0056b3;
}

/* Action buttons in table */
.table-button-css {
    background-color: transparent;
    border: none;
    color: #007bff;
    font-size: 1.2rem;
    cursor: pointer;
    transition: color 0.3s ease;
}

.table-button-css:hover {
    color: #0056b3;
}

/* Media query for responsive design */
@media (max-width: 768px) {
    .inside-content-css {
        padding: 1rem;
    }

    h1 {
        font-size: 1.5rem;
    }

    .table {
        font-size: 0.8rem;
    }

    .default-button-css {
        padding: 0.5rem;
        font-size: 0.8rem;
    }
}
