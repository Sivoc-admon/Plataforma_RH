<%- include('../navbar.ejs') %>
<link rel="stylesheet" href="/css/usuarios.css">
<script src="/js/usuarios/configureTeamView.js" defer></script>


<!-- requires client validation -->


<div class="inside-content-css">
    <h1>Módulo Usuarios</h1>
    
    <div class="columns" style="margin-top: 1rem;">
        <div class="column is-centered" style="text-align: center;">
            <button class="default-button-css functionality-button-css" onclick="returnMainTable()">
                <i class="fa-solid fa-circle-left default-icon-button-css"></i>
                <p>Regresar al tablero</p>
            </button>
        </div>
    </div>
    
    <% if (teamsRows.length !== 0) { %>
        <div class="field">
            <div class="control">
                <input class="input" type="text" id="searchInput" placeholder="Buscar por nombre, apellido o área" onkeyup="filterTable()">
            </div>
        </div>
        
        <div class="container">
            <h2 class="section-title" style="color: white">Distribución de equipos</h2>
            
            <div id="userList" class="team-grid">
                <% teamsRows.forEach(team => { %>
                    <li class="team-card" style="margin:0">
                        <div class="team-header">
                            <h3>
                                <%= team.jefeInmediatoId.nombre %> <%= team.jefeInmediatoId.apellidoP %> - 
                                <%= team.jefeInmediatoId.area %> (<%= team.jefeInmediatoId.puesto %>)
                            </h3>
                            <button class="card-button" aria-label="Editar">
                                <i class="fa-solid fa-pencil"></i>
                            </button>
                        </div>
                        
                        <div class="team-content">
                            <% if (team.colaboradoresIds && team.colaboradoresIds.length > 0) { %>
                                <ul class="collaborator-list">
                                    <% team.colaboradoresIds.forEach(colaborador => { %>
                                        <li>
                                            <%= colaborador.nombre %> <%= colaborador.apellidoP %> - 
                                            <%= colaborador.area %> (<%= colaborador.puesto %>)
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else { %>
                                <p class="no-collaborators">No hay colaboradores asignados.</p>
                            <% } %>
                        </div>
                    </li>
                <% }); %>
            </div>
        </div>
        <!-- 

        Igual si puedieras confirmarme si un jefe inmediato puede participar en un solo equipo?
         
        -->
        
        <div class="pagination">
            <button class="default-button-css" onclick="prevPage()">Anterior</button>
            <button class="default-button-css" onclick="nextPage()">Siguiente</button>
        </div>
    <% } else { %>
        <h2 class="empty-message">El sistema no cuenta con usuarios desactivados. ✅</h2>
    <% }; %>
</div>