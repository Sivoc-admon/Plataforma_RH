                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            <input x-model="searchQuery" @input="filterTable()" type="text"
                                placeholder="Buscar por nombre, apellido o área"
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                    </div>
                </template>
            </div>

            <!-- Tabulator Table -->
            <template x-if="!isLoading && usersRows.length > 0">
                <div>
                    <div id="users-table" class="bg-white rounded-lg shadow-md overflow-hidden mb-6"></div>

