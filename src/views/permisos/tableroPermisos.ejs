<!DOCTYPE html>
<html lang="es" class="h-full">

<head>
    <!-- do not format html -->
    
    <!-- Global Headers -->
    <%- include('../partials/globalHeaders.ejs') %>

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="<%- NGINX_TAG %>/css/partials/global.css">

    <!-- JS personalizado -->
    <script src="<%- NGINX_TAG %>/js/permisos/tableroPermisos.js"></script>

    <!-- Let the script use the data -->
    <script>
        const dataJson = <%- JSON.stringify(dataJson) %>;
    </script>

    <style>
        .tabulator-cell {
            display: flex;
            align-items: center !important;     /* Centrado vertical */
            padding: 10px !important; /* Opcional: ajusta según tu diseño */
        }
    </style>

</head>

<body class="bg-gray-50 min-h-full">
    <!-- Navigation Bar -->
    <%- include('../partials/navbar.ejs') %>

    <!-- Side Bar -->
    <%- include('../partials/sidebar.ejs') %>

    <div class="pt-[5.5rem]">
        <div class="container mx-auto px-4 py-8" x-data="tableroPermisos()">
            <div>
                <!-- Action Buttons -->
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">

                    <button @click="crearPermiso()" onclick="openPermisoNotification()"
                        class="flex flex-col items-center justify-center p-4 bg-white border-2 border-gray-200 rounded-lg hover:border-green-500 hover:bg-green-50 transition-all duration-200 shadow-sm">
                        <svg class="w-6 h-6 mb-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4v16m8-8H4" />
                        </svg>
                        <span class="text-sm font-medium text-gray-700">Crear solicitud</span>
                    </button>

                    <button @click="downloadPDF()"
                        class="flex flex-col items-center justify-center p-4 bg-white border-2 border-gray-200 rounded-lg hover:border-red-500 hover:bg-red-50 transition-all duration-200 shadow-sm">
                        <svg class="w-6 h-6 mb-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                            </path>
                        </svg>
                        <span class="text-sm font-medium text-gray-700">Descargar PDF</span>
                    </button>

                    <button @click="downloadExcel()"
                        class="flex flex-col items-center justify-center p-4 bg-white border-2 border-gray-200 rounded-lg hover:border-yellow-500 hover:bg-yellow-50 transition-all duration-200 shadow-sm">
                        <svg class="w-6 h-6 mb-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                            </path>
                        </svg>
                        <span class="text-sm font-medium text-gray-700">Descargar Excel</span>
                    </button>
                </div>
                
                <!-- Loading indicator -->
                <template x-if="isLoading">
                    <div class="text-center py-12">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
                            <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                            </svg>
                        </div>
                        <h2 class="text-xl font-semibold text-gray-800">Cargando datos...</h2>
                    </div>
                </template>

                <!-- Search Input -->
                <template x-if="!isLoading">
                    <div class="mb-6">
                        <div class="relative">
                            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"
                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            <input x-model="searchQuery" @input="filterTable()" type="text"
                                placeholder="Buscar por nombre, apellido o área"
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                    </div>
                </template>
            </div>

            <!-- Tabulator Table P1 -->
            <% if (cargarTodosLosPermisos) { %> 
            <h2 class="text-lg font-bold text-gray-600 mb-1">Todos los permisos de SIVOC</h2>
            <div id="row-count" class="text-gray-700 font-small mb-2">Permisos dentro de esta tabla: <%- dataJson.cargarTodosLosPermisos.length %></div>
            <template x-if="!isLoading">
                <div>
                    <div id="data-table-1" class="bg-white rounded-lg shadow-md overflow-hidden mb-6"></div>
                </div>
            </template>
            <% }; %>

            <!-- Tabulator Table P2 -->
            <% if (cargarPermisosEquipo) { %> 
            <h2 class="text-lg font-bold text-gray-600 mb-1">Los permisos de tu equipo</h2>
            <div id="row-count" class="text-gray-700 font-small mb-2">Permisos dentro de esta tabla: <%- dataJson.cargarPermisosEquipo.length %></div>
            <template x-if="!isLoading">
                <div>
                    <div id="data-table-2" class="bg-white rounded-lg shadow-md overflow-hidden mb-6"></div>
                </div>
            </template>
            <% }; %>

            <!-- Tabulator Table P3 -->
            <% if (cargarTusPermisos) { %> 
            <h2 class="text-lg font-bold text-gray-600 mb-2">Tus permisos</h2>
            <div id="row-count" class="text-gray-700 font-small mb-2">Permisos dentro de esta tabla: <%- dataJson.cargarTusPermisos.length %></div>
            <template x-if="!isLoading">
                <div>
                    <div id="data-table-3" class="bg-white rounded-lg shadow-md overflow-hidden mb-6"></div>
                </div>
            </template>
            <% }; %>

            <!-- Error Message -->
            <template x-if="!isLoading && hasError">
                <div class="text-center py-12">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
                        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-semibold text-gray-800">Error al cargar usuarios</h2>
                    <p class="text-gray-600 mb-4">No se pudieron cargar los datos de usuarios.</p>
                    <button @click="loadUsersData()" 
                        class="px-4 py-2 bg-blue-600 border border-transparent rounded-md text-sm font-medium text-white hover:bg-blue-700">
                        Reintentar
                    </button>
                </div>
            </template>

            <!-- Notificación al crear un permiso -->
            <div id="crearPermisoModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                <div class="bg-white p-6 rounded-lg shadow-xl w-[400px] max-w-xl max-h-[80vh] flex items-start space-x-4">
                    <!-- Icono de carga -->
                    <div class="flex-shrink-0">
                        <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
                        </svg>
                    </div>

                    <!-- Contenido del modal -->
                    <div class="flex-1">
                        <h4 class="font-bold">Creando elemento...</h4>
                        <p class="text-sm">Por favor espera un momento</p>
                    </div>
                </div>
            </div>

            <!-- Modal de descripción global -->
            <div id="descripcionModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                <div class="bg-white rounded-lg shadow-2xl w-full max-w-lg max-h-[80vh] flex flex-col overflow-hidden">
                    <div class="px-6 py-4 border-b flex justify-between items-center">
                        <h3 class="text-xl font-medium text-gray-800">Descripción completa</h3>
                        <button onclick="closeDescripcionModal()" class="text-gray-500 hover:text-gray-700 focus:outline-none">
                            ✕
                        </button>
                    </div>
                    <div id="descripcionModalContent" class="px-6 py-4 text-gray-700 whitespace-pre-wrap overflow-y-auto">
                        <!-- Aquí se inserta el texto -->
                    </div>
                    <div class="px-6 py-4 border-t">
                        <h4 class="text-lg font-semibold text-gray-800 mb-3">Archivos para Descargar:</h4>
                        <ul class="list-disc pl-5 space-y-2">
                            <li>
                                <a href="http://localhost:3000/modulorrhh/sivoc/getPfp/file1" 
                                class="block text-blue-600 hover:text-blue-700 focus:outline-none transition duration-300">
                                    Archivo 1
                                </a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/modulorrhh/sivoc/getPfp/file2" 
                                class="block text-blue-600 hover:text-blue-700 focus:outline-none transition duration-300">
                                    Archivo 2
                                </a>
                            </li>
                            <li>
                                <a href="http://localhost:3000/modulorrhh/sivoc/getPfp/file3" 
                                class="block text-blue-600 hover:text-blue-700 focus:outline-none transition duration-300">
                                    Archivo 3
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="px-6 py-4 border-t text-right">
                        <button onclick="closeDescripcionModal()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 focus:outline-none transition duration-300">
                            Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function openDescripcionModal(text) {
            const modal = document.getElementById("descripcionModal");
            const content = document.getElementById("descripcionModalContent");
            content.textContent = text;
            modal.classList.remove("hidden");
        }

        async function openPermisoNotification() {
            const modal = document.getElementById("crearPermisoModal");
            modal.classList.remove("hidden");
            await new Promise(resolve => setTimeout(resolve, 3000));
            location.href = location.href;
        }

        function closeDescripcionModal() {
            document.getElementById("descripcionModal").classList.add("hidden");
        }
    </script>

</body>

</html>