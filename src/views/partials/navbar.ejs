<!-- Estilos CSS para el navbar partial -->
<style>
    /* Variables CSS para el navbar */
    .navbar {
        --glass-bg: var(--glass-black);
        --glass-border: rgba(139, 193, 211, 0.2);
        --transition-smooth: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);

        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 2rem;
        background: linear-gradient(135deg, var(--black), var(--light-blue));
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-bottom: 1px solid var(--glass-border);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        position: fixed;
        width: 100%;
        z-index: 999;
    }

    /* Efecto sutil de brillo en la parte superior */
    .navbar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg,
                transparent 0%,
                var(--cyan) 50%,
                transparent 100%);
    }

    /* Mejorar el bot贸n del sidebar */
    .sidebar-toggle-improved {
        width: 2.625rem;
        height: 2.625rem;
        padding: 0.5625rem;
        border-radius: 12px;
        background: var(--dark-blue);
        transition: var(--transition-smooth);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .sidebar-toggle-improved:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(1, 110, 118, 0.4);
    }


    .sidebar-toggle-improved .icon-css-navbar {
        width: 2rem;
        height: 2rem;
        transition: var(--transition-smooth);
    }

    /* Contenedor de informaci贸n del usuario */
    .user-info-container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: var(--glass-black);
        padding: 0.5625rem 1rem;
        padding-right: 1.3rem;
        border-radius: 50px;
        border: 1px solid var(--light-green);
        transition: var(--transition-smooth);
        box-shadow: 0 2px 10px rgba(74, 144, 226, 0.1);
    }

    .user-info-container:hover {
        background: rgba(27, 56, 103, 0.249);
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(74, 144, 226, 0.2);
        border-color: var(--cyan);
    }

    /* Contenedor de la foto de perfil */
    .pfp-container {
        position: relative;
        width: 2.5rem;
        height: 2.5rem;
    }

    .pfp-css {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--light-blue);
        box-shadow: 0 3px 10px rgba(1, 110, 118, 0.3);
        transition: var(--transition-smooth);
    }

    .pfp-css:hover {
        transform: scale(1.05);
        border-color: var(--cyan);
        box-shadow: 0 5px 20px rgba(74, 144, 226, 0.4);
    }

    /* Informaci贸n del usuario */
    .user-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.125rem;
    }

    .user-name {
        color: var(--white);
        font-size: 0.875rem;
        font-weight: 600;
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
        letter-spacing: 0.25px;
        margin: 0;
        margin-right: 0.1rem;
        line-height: 1.2;
    }

    .user-role {
        margin-top: 0.1rem;
        color: var(--cyan);
        font-size: 0.5875rem;
        font-weight: 500;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        background: var(--dark-green);
        padding: 0.2175rem 0.565rem;
        border-radius: 10px;
        border: 1px solid var(--light-green);
        line-height: 1;
    }

    /* Responsive para m贸viles */
    @media (max-width: 768px) {
        .navbar {
            padding: 0.5625rem 1rem;
        }

        .user-info-container {
            padding: 0.375rem 0.75rem;
            gap: 0.5625rem;
        }

        .pfp-container {
            width: 1.875rem;
            height: 1.875rem;
        }

        .user-name {
            font-size: 0.8125rem;
        }

        .user-role {
            font-size: 0.65rem;
        }
    }

    @media (max-width: 480px) {
        .user-details {
            align-items: center;
        }
    }
</style>

<!-- Navbar Content -->
<nav class="navbar">
    <!-- Sidebar toggle icon con mejoras visuales -->
    <div class="sidebar-toggle-improved flex items-center space-x-4" onclick="toggleSidebar()">
        <svg class="icon-css-navbar" style="color: var(--white);" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd"
                d="M3 6.75A.75.75 0 013.75 6h16.5a.75.75 0 010 1.5H3.75A.75.75 0 013 6.75zM3 12a.75.75 0 01.75-.75h16.5a.75.75 0 010 1.5H3.75A.75.75 0 013 12zm0 5.25a.75.75 0 01.75-.75h16.5a.75.75 0 010 1.5H3.75a.75.75 0 01-.75-.75z"
                clip-rule="evenodd" />
        </svg>
    </div>

    <!-- Banner informativo -->
    <div class="user-details">
        <span class="user-name " style="font-size: 1.9rem;"><%- sidebarPageTitle %></span>
    </div>

    

    <!-- User information mejorada -->
    <div class="user-info-container">
        <div class="pfp-container">
            <div x-data="{ imgSrc: '/modulorrhh/sivoc/getPfp', fallback: '<%- NGINX_TAG %>/img/SIVOC_PFP.png' }">
                <img :src="imgSrc" alt="Foto de perfil" class="pfp-css" x-on:error="imgSrc = fallback">
            </div>
        </div>

        <div class="user-details">
            <span class="user-name"><%- nameDisplay %></span>
            <span class="user-role"><%- privilegio %></span>
        </div>
    </div>
</nav>


